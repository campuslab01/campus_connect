{
  "name": "campus-connection-api",
  "env": "node",
  "buildCommand": "cd server && npm install",
  "startCommand": "cd server && npm start",
  "healthCheckPath": "/api/health",
  "envVars": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "CLIENT_URL",
      "value": "https://www.campusconnection.co"
    },
    {
      "key": "ALLOWED_ORIGINS",
      "value": "https://campusconnection.co, https://www.campusconnection.co, http://localhost:5173, http://localhost:3000"
    }
  ]
}
